<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imv_category_maincategory"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_launcher_background"/>
        <TextView
            android:id="@+id/tv_category_maincategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/imv_category_maincategory"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_description_maincategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_toRightOf="@id/imv_category_maincategory"
            android:layout_below="@id/tv_category_maincategory"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>