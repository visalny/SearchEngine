<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_marginTop="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imv_searchurl"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/placeholder"/>
       <LinearLayout
           android:layout_marginLeft="20dp"
           android:layout_toRightOf="@+id/imv_searchurl"
           android:layout_width="wrap_content"
           android:orientation="vertical"
           android:layout_height="wrap_content">
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/imv_name_searchurl"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:src="@drawable/placeholder"/>
               <TextView
                   android:layout_marginLeft="3dp"
                   android:id="@+id/tv_name_searchurl"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="name"
                   android:textSize="20sp"
                   android:textColor="#1081E0"
                   android:layout_toRightOf="@+id/imv_name_searchurl"/>
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/imv_phone_searchurl"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_smartphone_call"/>
               <TextView
                   android:id="@+id/tv_phone_searchurl"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="name"
                   android:layout_marginLeft="3dp"
                   android:layout_toRightOf="@id/imv_phone_searchurl"/>
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/imv_url_searchurl"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_worldwide"/>
               <TextView
                   android:id="@+id/tv_url_searchurl"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="name"
                   android:layout_marginLeft="3dp"
                   android:textColor="@color/colorPrimaryDark"
                   android:layout_toRightOf="@id/imv_url_searchurl"/>
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/imv_email_searchurl"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_mail"/>
               <TextView
                   android:id="@+id/tv_email_searchurl"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="name"
                   android:layout_marginLeft="3dp"
                   android:layout_toRightOf="@id/imv_email_searchurl"/>
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/imv_address_searchurl"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_location"/>
               <TextView
                   android:id="@+id/tv_address_searchurl"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="name"
                   android:layout_marginLeft="3dp"
                   android:layout_toRightOf="@id/imv_address_searchurl"/>
           </RelativeLayout>



       </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>